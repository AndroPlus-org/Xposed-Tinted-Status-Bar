<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff333333"
    android:padding="16dp">

    <ImageView
        android:id="@+id/bitmap"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginBottom="16dip" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingBottom="8dip"
        android:text="@string/status_bar_icon_tint_text"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/iconColorRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dip"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconColorPreview"
            android:layout_width="match_parent"
            android:layout_height="8dip" />

        <Spinner
            android:id="@+id/iconColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingBottom="8dip"
        android:text="@string/status_bar_tint_text"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/colorPreviews"
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:weightSum="1">

        <ImageView
            android:id="@+id/touchColor"
            android:layout_width="0dip"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:layout_marginRight="4dip" />

        <ImageView
            android:id="@+id/generalColor"
            android:layout_width="0dip"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/touchApply"
            android:layout_width="0dip"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:text="@string/apply_touch_color"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/generalApply"
            android:layout_width="0dip"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:text="@string/apply_general_color"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</LinearLayout>
