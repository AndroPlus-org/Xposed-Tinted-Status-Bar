<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff333333"
    android:padding="16dp">

    <ImageView
        android:id="@+id/bitmap"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginBottom="16dip" />

    <LinearLayout
        android:id="@+id/colorPreviews"
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:weightSum="1"
        android:layout_below="@id/bitmap">

        <ImageView
            android:id="@+id/touchColor"
            android:layout_width="0dip"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:layout_marginRight="4dip" />

        <ImageView
            android:id="@+id/generalColor"
            android:layout_width="0dip"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_below="@id/colorPreviews">

        <Button
            android:id="@+id/touchApply"
            android:layout_width="0dip"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:text="@string/apply_touch_color" />

        <Button
            android:id="@+id/generalApply"
            android:layout_width="0dip"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:text="@string/apply_general_color" />

    </LinearLayout>

</RelativeLayout>
